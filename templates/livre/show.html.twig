{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <h1>Livre</h1>

    <table class="table table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Isbn</th>
                <td>{{ livre.isbn }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Nombre de pages</th>
                <td>{{ livre.nombrePages }}</td>
            </tr>
            <tr>
                <th>Date de Parution</th>
                <td>{{ livre.dateDeParution ? livre.dateDeParution|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ livre.note }}</td>
            </tr>
            <tr>
				<th>Genres</th>
				<td>
					{% for genre in livre.genres %}
						<span>
							{{ genre }}
						</span><br>
					{% endfor %}
				</td>
			</tr>
			<tr>
				<th>Auteurs</th>
				<td>
					{% for auteur in livre.auteurs %}
						<span>
							{{ auteur }}
						</span><br>
					{% endfor %}
				</td>
			</tr>
        </tbody>
    </table>

    <a class="btn btn-primary btn-adds" href="{{ path('livre_index') }}">Retour</a>

    <a class="btn btn-success btn-adds" href="{{ path('livre_edit', {'id': livre.id}) }}">Modifier</a>

    {{ include('livre/_delete_form.html.twig') }}
{% endblock %}
